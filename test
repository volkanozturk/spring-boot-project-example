    <profile>
      <id>git-hooks</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>es.hrero.maven</groupId>
            <artifactId>hrero-maven-githook-plugin</artifactId>
            <version>${hrero-maven-githook-plugin.version}</version>
            <executions>
              <execution>
                <goals>
                  <goal>install</goal>
                </goals>
                <configuration>
                  <ci>${env.CI}</ci>
                  <hooks>
                    <pre-push />
                    <commit-msg />
                  </hooks>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
